/* pages/order/order.wxss */
page{background: #fff;}
/* 筛选栏 */
.screen_body{position: fixed;top:0rpx;left: 0;width: 100%;display: flex;justify-content: space-around;align-items: center;font-size: 28rpx;border-bottom:1rpx #ddd solid; z-index: 2;background: #fff;}
.screen_item{line-height: 45rpx;width: 25%;text-align: center;letter-spacing: 1rpx;padding: 20rpx 0;}
.screen_num{line-height: 20rpx;font-size: 23rpx;}
.screen_act{color: #ff3f34;border-bottom:4rpx #ff3f34 solid; }
/* 其他 */
.near_up{display: flex;justify-content: space-between;align-items: center;padding: 20rpx 30rpx;font-size: 28rpx;color: #555;border-bottom:1rpx #ddd dashed; }
.near_up_title{color: #333;font-size: 35rpx;font-weight: bold;}
.near_body{display: flex;justify-content: space-around;width: 100%;margin: 0 20rpx;}
.near_item{display: flex;flex-wrap: nowrap;width: 280rpx;}
.near_item_item {display: flex;justify-content: center;align-items: center; width: 100%; height: 100%; margin: 15rpx;}
.logo_img{width: 85rpx;height: 85rpx;border-radius:8rpx; }
.near_item_body{font-size: 30rpx;margin-left: 10rpx;}
.near_item_right_up{ width: 180rpx; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;}
.near_item_body text{ font-size: 20rpx; background: #dedede; color: #f46e54; padding: 5rpx 10rpx; border-radius:8rpx; }
.order_list{padding: 30rpx;font-size: 25rpx;color: #333;}
.order_item{display: flex;justify-content: space-between;margin-top: 30rpx;padding-bottom: 30rpx;border-bottom:1rpx #ddd dashed; }
.order_item_body{width: 85%;}
.order_item_up{width: 100%;display: flex;justify-content: space-between;}
.order_shop_title{ font-size:25rpx; width: 350rpx; }
.order_item_up text{display: block;margin-top: 20rpx;}
.order_item_middle{display: flex;justify-content: space-between;margin: 20rpx 0;}
.order_item_down{display: flex;justify-content: space-between;align-items: center;margin-top: 15rpx;}
.order_info{overflow: hidden; width: 100%;}
.tag_icon{color: #fe2a39;}
.order_money{text-align: center;color: #fe2a39;}
.order_money text{font-size: 30rpx;}
.discount_price text{ color: #fe2a39;}
.again_btn{border: 1px #fe2a39 solid;padding: 10rpx;text-align: center;border-radius:10rpx;color: #fff;background: #fe2a39;letter-spacing: 2rpx;}
.shield_layer{ position: fixed; top: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5);}
.login_popup{background: #f2f2f2;width: 77%;height: 43%;margin:20% 0 0 5%;border-radius:8rpx; padding: 50rpx 50rpx 100rpx 50rpx;text-align: center;}
.shop_logo{width: 120rpx;height: 120rpx;border: 1rpx #ccc solid;border-radius: 50%;padding: 10rpx; }
.shop_title{ font-size: 35rpx; padding: 28rpx 0; letter-spacing: 8rpx; border-bottom:1rpx #ccc solid;  white-space: nowrap; width: 100%; overflow: hidden; text-overflow: ellipsis;}
.tip_info{font-size: 25rpx;color: #555;letter-spacing: 2rpx;padding:30rpx 50rpx 0;text-align: left;}
.login_btn{background: #1aad19;color: #fff;font-size: 30rpx;letter-spacing: 4rpx;border-radius:100rpx; }
.close_btn{ position:absolute; bottom: 10%; left: 38%;  width: 80rpx; height: 80rpx; padding: 50rpx;}
form{position: fixed;right: 0;width: 30%;bottom: 0;}
.order_up{width: 100%;opacity: 0;}


