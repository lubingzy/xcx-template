<!--pages/cart/cart.wxml-->
<!-- 顶部信息 -->
<view class='shop_info'>
  <view class='vip'>会员号：123456789002332332</view>
  <view class='line'>
    <view class='shop_name'>长沙贺龙体育店
      <image class='localtion_img' src='../../images/location.png'></image>
    </view>
    <view class='order' catchtap='toPage' data-page="myOrder">我的订单
      <image class="wihte_right_arrow" src='../../images/wihte_right_arrow.png'></image>
    </view>
  </view>
</view>
<!-- 购物袋 -->
<view class='good_bag_body'>
  <view class='good_bag_title'>请选择购物袋</view>
  <view class='good_bag_list'>
    <view class='good_bag'>
      <view class='good_bag_item'>
        <view class='good_bag_info'>大袋
          <text>￥0.30</text>
        </view>
        <view class='bag_opt_body'>
          <image class='opt_img' src='../../images/sub_blue.png'></image>
          <view class='opt_num'>2</view>
          <image class='opt_img' src='../../images/add_blue.png'></image>
        </view>
      </view>
    </view>

    <view class='good_bag'>
      <view class='good_bag_item'>
        <view class='good_bag_info'>小袋
          <text>￥0.20</text>
        </view>
        <view class='bag_opt_body'>
          <image class='opt_img' src='../../images/sub_blue.png'></image>
          <view class='opt_num'>2</view>
          <image class='opt_img' src='../../images/add_blue.png'></image>
        </view>
      </view>
    </view>

  </view>

</view>
<!-- 商品列表 -->
<view class="good_item">
  <view class='good_item_left'>
    <view class='good_sn'>商品号：6920734704576</view>
    <view class='good_name'>康师傅爆椒牛肉桶面</view>
    <view class='good_price'>单价：
      <text>￥4.00</text>
    </view>
  </view>
  <view class='good_item_right'>
    <view class='opt_body'>
      <image class='opt_img' src='../../images/sub_blue.png'></image>
      <view class='opt_num'>2</view>
      <image class='opt_img' src='../../images/add_blue.png'></image>
    </view>
    <view style='font-size:35rpx;color:red;float:right;'>￥4.00</view>
  </view>
</view>

<!-- 底部 -->
<view class='foot'>
  <view class='sum_price'>总计:
    <text>￥3.30</text>
  </view>
    <view class='sao_btn' catchtap='sao_sn' hover-class='btn_hover'>
      <image class='sm_img' src='../../images/sm.png'></image>
      <view class='sm_text'>继续扫</view>
    </view>
  <view hover-class='btn_hover' class='edit_btn' catchtap='toPage' data-page="addGood">
    <image class='edit_wihte' src='../../images/edit_wihte.png'></image>
  </view>
  <view hover-class='btn_hover' class='del_btn' catchtap='toPage' data-page="cleanCart">
    <image class='edit_wihte' src='../../images/del_wihte.png'></image>
  </view>
  <view class='pay_btn_img' hover-class='btn_hover'>去结算</view>
</view>