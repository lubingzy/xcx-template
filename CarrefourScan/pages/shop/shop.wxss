.sm_text{margin-top: -90rpx;letter-spacing: 2rpx;}
.sao_btn_hover{opacity: 0.8;}
.no_sao{font-size: 28rpx;color: #555;letter-spacing: 2rpx;text-align: center;}
.no_sao text{color: #184a8c;font-weight: bold;}
.foot{text-align: center;color: #555;font-size: 25rpx;letter-spacing: 2rpx;margin-top: 20rpx;}