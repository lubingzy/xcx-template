/* pages/shop/shop.wxss */
.upBody{display: flex;font-size: 30rpx;align-items: center;justify-content: space-around;padding: 45rpx 0;color: #fff;background: #184a8c;}
.userInfo{display: flex;width: 65%;justify-content: space-around;align-items: center;}
.headImg{width: 130rpx;height: 130rpx;border-radius:50%; border: 5rpx #fff solid;}
.vip{font-size: 25rpx;}
.wihte_right_arrow{width: 28rpx;height: 28rpx;}
.order{width: 25%;}
.wihte_top_arrow{width: 25rpx;height: 25rpx;margin-left: 5rpx;}
.select_shop{background: rgba(255, 255, 255, 0.3);padding:5rpx;width: 80%;font-size: 26rpx;display: flex;align-items: center;justify-content: center;border-radius:15rpx;letter-spacing: 2rpx;}
