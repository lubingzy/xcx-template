/* pages/search/search.wxss */
/* 搜索 */
.top_tab{
  background: #53cac4;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.search_body{
  display: flex;
  align-items: center;
  font-size:25rpx; 
  color: #999;
  width: 72%;
  padding: 15rpx 0 10rpx 20rpx;
  background: #f2f2f2;
  border-radius:40rpx; 
}
.reset_btn{
  color: #fff;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  padding: 10rpx;
}
.search_input{
  width: 80%;
}
.input_placeholder{
  margin-left: 10rpx;
}
.search_body image{
  width: 40rpx;
  height: 40rpx;
}